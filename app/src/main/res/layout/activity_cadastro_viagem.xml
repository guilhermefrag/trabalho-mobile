<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/orange"
                android:text="Voltar" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CADASTRO DE VIAGEM"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrição da viagem"
                android:inputType="text"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GASOLINA"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:paddingTop="10dp"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/editTotalKm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total de Km"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editKmPorLitro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Km por litro"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editCustoMedioLitro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Custo médio do litro"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editTotalVeiculos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total de veículos"
                android:inputType="number"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"/>

            <CheckBox
                android:id="@+id/checkAdicionarGasolina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:text="Adicionar gasolina" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TARIFA AÉREA"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:paddingTop="10dp"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/editCustoEstimadoPessoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Custo estimado por pessoa"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editAluguelVeiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aluguel de veículo"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"/>

            <CheckBox
                android:id="@+id/checkAdicionarTarifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:text="Adicionar tarifa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REFEIÇÕES"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:paddingTop="10dp"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/editCustoRefeicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Custo estimado por refeição"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editRefeicoesDia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Refeições por dia"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"/>

            <CheckBox
                android:id="@+id/checkAdicionarRefeicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:text="Adicionar refeição" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOSPEDAGEM"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:paddingTop="10dp"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/editCustoPorNoite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Custo médio (por noite)"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editTotalNoites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total de noites"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editTotalQuartos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total de quartos"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/orange"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"/>

            <CheckBox
                android:id="@+id/checkAdicionarHospedagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:text="Adicionar hospedagem" />

        </LinearLayout>


        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="50"
            android:backgroundTint="@color/orange"
            android:text="REGISTRAR" />

    </LinearLayout>
</ScrollView>
